{
  "@context": {
    "@vocab": "https://w3id.org/edc/v0.0.1/ns/"
  },
  "@id": "{{policy-id}}",
  "@type": "PolicyDefinition",
  "policy": {
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "@type": "Set",
    "permission": [
      {
        "action": "use",
        "constraint": {
          "@type": "AtomicConstraint",
          "leftOperand": "{{left-operand}}",
          "operator": {
            "@id": "{{operator}}"
          },
          "rightOperand": "{{right-operand}}"
        }
      }
    ],
    "prohibition": [],
    "obligation": []
  }
}
