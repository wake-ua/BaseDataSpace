{
  "@context": {
    "@vocab":  "https://w3id.org/edc/v0.0.1/ns/",
    "award": "https://schema.org/award"
  },
  "@type": "PolicyDefinition",
  "@id": "{{policy-id}}",
  "policy": {
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "@type": "Set",
    "permission": [
      {
        "action": "use",
        "constraint": {
          "or": [
            {
              "leftOperand": "award",
              "operator": "eq",
              "rightOperand": "Red Dot Design Award"
            }
          ]
        }
      }
    ]
  }
}