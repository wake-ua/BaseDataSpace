

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "@type": {
      "type": "string"
    },
    "@id": {
      "type": "string"
    },
    "@context": {},
    "properties": {
      "type": "object",
      "properties": {
        "http://purl.org/dc/terms/title": {
          "type": "string"
        },
        "http://purl.org/dc/terms/description": {
          "type": "string"
        },
        "contenttype": {
          "type": "string"
        },
        "https://schema.org/additionalProperty": {},
        "http://www.w3.org/ns/dcat#inSeries": {
          "type": "string"
        },
        "http://purl.org/dc/terms/accrualPeriodicity": {
          "type": "string"
        },
        "http://www.w3.org/ns/dcat#temporalResolution": {
          "type": "string"
        },
        "http://www.w3.org/ns/dcat#spatialResolutionInMeters": {
          "type": "number"
        },
        "http://purl.org/dc/terms/temporal": {
          "type": "object",
          "properties": {
            "http://www.w3.org/ns/dcat#startDate": {
              "type": "string",
              "format": "date-time"
            },
            "http://www.w3.org/ns/dcat#endDate": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": [
            "http://www.w3.org/ns/dcat#startDate"
          ],
          "additionalProperties": false
        },
        "http://purl.org/dc/terms/spatial": {
          "type": "string"
        },
        "http://purl.org/dc/terms/type": {
          "type": "string",
          "enum": ["Dataset", "Service"]
        },
        "http://purl.org/dc/terms/modified": {
          "type": "string",
          "format": "date-time"
        },
        "http://purl.org/dc/terms/issued": {
          "type": "string",
          "format": "date-time"
        },
        "http://purl.org/dc/terms/accessRights": {
          "type": "string",
          "format": "uri"
        },
        "http://purl.org/dc/terms/license": {
          "type": "string",
          "format": "uri"
        },
        "http://purl.org/dc/terms/rights": {
          "type": "string"
        },
        "http://www.w3.org/ns/dcat#keyword": {
          "oneOf": [
            {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            {
              "type": "string"
            }
          ]
        },
        "https://w3id.org/cbm/v0.0.1/ns/hasSample": {
          "type": ["string", "array"]
        },
        "https://w3id.org/cbm/v0.0.1/ns/isSampleOf": {
          "type": "string"
        },
        "https://schema.org/algorithm": {
          "type": "string"
        },
        "http://www.w3.org/ns/dcat#byteSize": {
          "type": "number"
        },
        "https://w3id.org/cbm/v0.0.1/ns/hasDataDictionary": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "enum": ["cbm:DataDictionary", "https://w3id.org/cbm/v0.0.1/ns/DataDictionary"]
            },
            "https://w3id.org/cbm/v0.0.1/ns/hasField": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "@type": {
                      "type": "string",
                      "enum": ["cbm:Field", "https://w3id.org/cbm/v0.0.1/ns/Field"]
                    },
                    "https://schema.org/name": {
                      "type": "string"
                    },
                    "http://purl.org/dc/terms/title": {
                      "type": "string"
                    },
                    "http://purl.org/dc/terms/description": {
                      "type": "string"
                    },
                    "https://w3id.org/cbm/v0.0.1/ns/sampleValue": {
                    },
                    "https://w3id.org/cbm/v0.0.1/ns/datatype": {
                      "type": "string",
                      "enum": ["boolean", "date", "dateTime", "decimal", "double", "float", "integer", "string", "time"]
                    }
                  },
                  "required": [
                    "@type",
                    "https://schema.org/name"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "required": [
            "@type",
            "https://w3id.org/cbm/v0.0.1/ns/hasField"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "http://purl.org/dc/terms/title",
        "http://purl.org/dc/terms/description",
        "http://purl.org/dc/terms/accessRights",
        "http://purl.org/dc/terms/license",
        "http://purl.org/dc/terms/issued",
        "http://purl.org/dc/terms/modified",
        "http://purl.org/dc/terms/type"
      ],
      "additionalProperties": false
    },
    "dataAddress": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["HttpData", "ServiceData"]
        },
        "baseUrl": {
          "type": "string",
          "format": "uri"
        },
        "proxyPath": {
          "type": "string",
          "enum": [
            "true",
            "false"
          ]
        },
        "authKey": {
          "type": "string"
        },
        "authCode": {
          "type": "string"
        }
      },
      "if": {
        "properties": {
          "type": { "const": "HttpData" }
        },
        "required": []
      },
      "then": { "required": ["baseUrl"] },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "@id",
    "properties",
    "dataAddress"
  ],
  "additionalProperties": false
}

